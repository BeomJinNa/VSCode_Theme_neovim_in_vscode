{
  "name": "Neovim Inspired",
  "type": "dark",
  "colors": {
    "editor.background": "#1a1a1a",
    "editor.foreground": "#abb2bf",
    "editor.lineHighlightBackground": "#2c313a",
    "editor.selectionBackground": "#3E4451",
    "editorCursor.foreground": "#ffffff"
  },
  "tokenColors": [
    {
      // Bright Cyan
      "scope": [
        "comment", // Comment
        "punctuation.definition.comment", // Comment Punctuation
        "keyword.control.import", // Preprocessor Directives (#include)
        "keyword.control.export",
        "keyword.control.directive"
      ],
      "settings": {
        "foreground": "#55ffff"
      }
    },
    {
      // White
      "scope": [
        "entity.name.function", // Function Names
        "punctuation.terminator.statement.cpp", // Semicolon
        "punctuation.separator.label.cpp", // Colon
        "entity.name.label.cpp", //label(goto)
        "keyword.operator.assignment.cpp",
        "keyword.operator.comparison.cpp",
        "keyword.operator.increment.cpp"

      ],
      "settings": {
        "foreground": "#ffffff"
      }
    },
    {
      // Gray
      "scope": [
        "variable" // Variable Names
      ],
      "settings": {
        "foreground": "#bbbbbb"
      }
    },
    {
      // Bright Green
      "scope": [
        "entity.name.type", // Type Names
        "entity.name.class",
        "support.type",
        "support.class",
        "storage.type.built-in.primitive.cpp", // Primitive Types in C++
        "storage.type.primitive.cpp",
        "entity.name.scope-resolution.cpp",
        "storage.modifier.specifier.static.cpp"
      ],
      "settings": {
        "foreground": "#55ff55"
      }
    },
    {
      // Bright Yellow
      "scope": [
        "keyword.operator", // Operators
        "keyword.control" // Control Keywords (if, for, while)
      ],
      "settings": {
        "foreground": "#ffff55"
      }
    },
    {
      // Magenta
      "scope": [
        "constant", // Constants
        "constant.other", 
        "constant.character.string", // String Literals
        "constant.other.symbol",
        "string", // Strings
        "string.quoted"
      ],
      "settings": {
        "foreground": "#bb00bb"
      }
    },
    {
      // Orange
      "scope": [
        "constant.character.escape" // Escape Characters (\n, \t, etc.)
      ],
      "settings": {
        "foreground": "#ffd7d7"
      }
    }
  ]
}
